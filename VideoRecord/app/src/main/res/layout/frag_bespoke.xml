<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--底部操作栏-->
            <LinearLayout
                android:id="@+id/user_bottom_layout"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="60dip"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:id="@+id/bespoke_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="16dip"
                            android:layout_marginRight="16dip"
                            android:layout_gravity="center"
                            android:background="@drawable/button_green"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="@string/bespoke"/>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:smoothScrollbar="true"
                android:layout_above="@id/user_bottom_layout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/building_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fc_banner_placeholder"/>
                    <!--title-->
                    <TextView
                        android:id="@+id/building_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="10dip"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text"
                        android:text="朗诗西华府二期"/>
                    <!--desc-->
                    <TextView
                        android:id="@+id/building_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="5dip"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textColor="@color/color_detail"
                        android:text="200m | 4rooms | 精装 | 朝南"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dip"
                        android:background="@color/line_color"
                        android:layout_marginTop="10dip"
                        />

                    <!--联系人-->
                    <LinearLayout
                        android:id="@+id/building_contacts_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:textColor="@color/color_text"
                            android:text="@string/contacts"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="54dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip">

                            <com.softgrid.shortvideo.customView.CircleImageView
                                android:id="@+id/building_contacts_icon"
                                android:layout_width="44dip"
                                android:layout_height="44dip"
                                android:layout_centerVertical="true"
                                android:src="@drawable/fc_boy_headdefault"
                                android:scaleType="centerCrop"/>

                            <com.softgrid.shortvideo.customView.CImageView
                                android:id="@+id/building_contacts_callbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/fc_phonecall_button"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:layout_toLeftOf="@id/building_contacts_callbtn"
                                android:layout_toRightOf="@id/building_contacts_icon"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/building_contacts_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:singleLine="true"
                                        android:textColor="@color/color_text"
                                        android:text="田峰"/>
                                    <FrameLayout
                                        android:id="@+id/building_contacts_type_layout"
                                        android:layout_width="40dip"
                                        android:layout_height="18dip"
                                        android:layout_marginLeft="8dip"
                                        android:layout_gravity="center"
                                        android:background="@drawable/bg_flowout"
                                        android:layout_alignParentRight="true">
                                        <TextView
                                            android:id="@+id/building_contacts_type_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:textSize="12sp"
                                            android:textColor="@color/color_detail"
                                            android:text="@string/intermediary"/>
                                    </FrameLayout>

                                    <ImageView
                                        android:id="@+id/building_contacts_stars"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dip"
                                        android:layout_gravity="center"
                                        android:src="@drawable/fc_stars_04"/>

                                </LinearLayout>
                                <TextView
                                    android:id="@+id/building_contacts_company"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dip"
                                    android:textSize="12sp"
                                    android:singleLine="true"
                                    android:textColor="@color/color_detail"
                                    android:text="链家高新店"/>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dip"
                        android:background="@color/line_color"
                        />

                    <!--看房时间选择-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:textColor="@color/color_text"
                            android:text="@string/bespoke_see_time"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:textColor="@color/color_detail"
                            android:text="@string/bespoke_see_time_tips"/>

                        <RelativeLayout
                            android:id="@+id/bespoke_time_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/color_white">
                            <ImageView
                                android:id="@+id/bespoke_time_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/fc_arrow"
                                />
                            <TextView
                                android:id="@+id/bespoke_time_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:layout_marginTop="15dip"
                                android:layout_marginBottom="15dip"
                                android:layout_toLeftOf="@+id/bespoke_time_arrow"
                                android:layout_centerVertical="true"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textColor="@color/color_text"
                                android:text="2018-07-20 09:00"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dip"
                        android:background="@color/line_color"
                        />

                    <!--温馨提示-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textColor="@color/color_detail"
                        android:text="@string/tips"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginBottom="10dip"
                        android:textSize="12sp"
                        android:textColor="@color/color_detail"
                        android:text="@string/tips_bespoke"/>

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>