<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/user_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_white">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="18dip"
                        android:layout_marginBottom="18dip"
                        android:layout_centerVertical="true"
                        android:src="@drawable/fc_boy_headdefault"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/user_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/fc_arrow"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_toRightOf="@id/user_icon"
                        android:layout_toLeftOf="@id/user_arrow"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:textColor="@color/color_text"
                            android:text="田峰"/>
                        <TextView
                            android:id="@+id/msg_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:textSize="11sp"
                            android:textColor="@color/color_detail"
                            android:text="15928571421"/>

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dip"
                    android:background="@color/line_color"
                    />

                <!--收藏、交易、贷款、预约-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <!--收藏-->
                    <LinearLayout
                        android:id="@+id/user_fav_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dip"
                        android:paddingBottom="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/color_white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/fc_mepage_focus"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:textColor="#666666"
                            android:text="@string/follower"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <!--交易-->
                    <LinearLayout
                        android:id="@+id/user_transaction_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dip"
                        android:paddingBottom="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/color_white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/fc_mepage_trading"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:textColor="#666666"
                            android:text="@string/transaction"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <!--贷款-->
                    <LinearLayout
                        android:id="@+id/user_loan_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dip"
                        android:paddingBottom="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/color_white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/fc_mepage_loan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:textColor="#666666"
                            android:text="@string/loan"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <!--预约-->
                    <LinearLayout
                        android:id="@+id/user_bespoke_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dip"
                        android:paddingBottom="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/color_white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/fc_mepage_appointment"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:textColor="#666666"
                            android:text="@string/bespoke"
                            android:textSize="14dip" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dip"
                    android:background="@color/line_color"
                    />

                <!--常见问题-->
                <RelativeLayout
                    android:id="@+id/user_qa_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/color_white">
                    <ImageView
                        android:id="@+id/icon_qa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:src="@drawable/fc_mepage_problem"/>
                    <ImageView
                        android:id="@+id/arrow_qa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/fc_arrow"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow_qa"
                        android:layout_toRightOf="@id/icon_qa"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/color_text2"
                        android:text="@string/qa"
                        android:textSize="16dip" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color"
                    />

                <!--贷款计算-->
                <RelativeLayout
                    android:id="@+id/user_loan_reckon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/color_white">
                    <ImageView
                        android:id="@+id/icon_loan_reckon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:src="@drawable/fc_mepage_counter"/>
                    <ImageView
                        android:id="@+id/arrow_loan_reckon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/fc_arrow"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow_loan_reckon"
                        android:layout_toRightOf="@id/icon_loan_reckon"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/color_text2"
                        android:text="@string/loan_reckon"
                        android:textSize="16dip" />
                </RelativeLayout>

                <!--律师推荐-->
                <RelativeLayout
                    android:id="@+id/user_lawyer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/color_white">
                    <ImageView
                        android:id="@+id/icon_lawyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:src="@drawable/fc_mepage_lawyer"/>
                    <ImageView
                        android:id="@+id/arrow_lawyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/fc_arrow"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow_lawyer"
                        android:layout_toRightOf="@id/icon_lawyer"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/color_text2"
                        android:text="@string/recommend_lawyer"
                        android:textSize="16dip" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color"
                    />

                <!--banker推荐-->
                <RelativeLayout
                    android:id="@+id/user_banker_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/color_white">
                    <ImageView
                        android:id="@+id/icon_banker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:src="@drawable/fc_mepage_banker"/>
                    <ImageView
                        android:id="@+id/arrow_banker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/fc_arrow"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow_banker"
                        android:layout_toRightOf="@id/icon_banker"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/color_text2"
                        android:text="@string/recommend_banker"
                        android:textSize="16dip" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color"
                    />

                <!--中介推荐-->
                <RelativeLayout
                    android:id="@+id/user_intermediary_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/color_white">
                    <ImageView
                        android:id="@+id/icon_intermediary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:src="@drawable/fc_mepage_mediation"/>
                    <ImageView
                        android:id="@+id/arrow_intermediary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/fc_arrow"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow_intermediary"
                        android:layout_toRightOf="@id/icon_intermediary"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/color_text2"
                        android:text="@string/recommend_intermediary"
                        android:textSize="16dip" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:background="@color/line_color"
                    />

                <!--登录或退出-->
                <RelativeLayout
                    android:id="@+id/user_login_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/color_white">
                    <TextView
                        android:id="@+id/user_login_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:singleLine="true"
                        android:textColor="@color/main_top"
                        android:text="@string/logout"
                        android:textSize="16dip" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:background="@color/line_color"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>