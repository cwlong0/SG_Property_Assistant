<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--底部操作栏-->
            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="60dip"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dip"
                        android:layout_marginRight="16dip"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/update_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/color_white"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/fc_following_buttonmodify"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="11sp"
                                android:textColor="@color/color_detail"
                                android:text="@string/update"/>
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/file_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dip"
                            android:layout_gravity="center"
                            android:background="@drawable/button_red"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="@string/file"/>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:smoothScrollbar="true"
                android:layout_above="@id/bottom_layout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/building_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fc_banner_placeholder"/>
                    <!--title-->
                    <TextView
                        android:id="@+id/building_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="10dip"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text"
                        android:text="朗诗西华府二期"/>
                    <!--desc-->
                    <TextView
                        android:id="@+id/building_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="5dip"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textColor="@color/color_detail"
                        android:text="200m | 4rooms | 精装 | 朝南"/>

                    <!--time-->
                    <TextView
                        android:id="@+id/loan_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="5dip"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textColor="@color/color_detail"
                        android:text="申请时间：2018-02-11"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:layout_marginTop="5dip"
                        android:background="@color/line_color"
                        />

                    <!--贷款金额-->
                    <RelativeLayout
                        android:id="@+id/loan_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:background="@drawable/color_white">

                        <ImageView
                            android:id="@+id/loan_money_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:src="@drawable/fc_arrow"/>
                        <TextView
                            android:id="@+id/loan_money_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="8dip"
                            android:layout_toLeftOf="@id/loan_money_arrow"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:textColor="@color/color_detail"
                            android:textSize="13dip"
                            android:text="100万"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/loan_money_text"
                            android:layout_marginLeft="10dip"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:textColor="@color/color_detail"
                            android:text="@string/loan_money"
                            android:textSize="16dip"
                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/line_color"
                        />

                    <!--贷款年限-->
                    <RelativeLayout
                        android:id="@+id/loan_year_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:background="@drawable/color_white">

                        <ImageView
                            android:id="@+id/loan_year_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:src="@drawable/fc_arrow"/>
                        <TextView
                            android:id="@+id/loan_year_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="8dip"
                            android:layout_toLeftOf="@id/loan_year_arrow"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:textColor="@color/color_detail"
                            android:textSize="13dip"
                            android:text="30年"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/loan_year_text"
                            android:layout_marginLeft="10dip"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:textColor="@color/color_detail"
                            android:text="@string/loan_year"
                            android:textSize="16dip" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dip"
                        android:background="@color/line_color"
                        android:layout_marginTop="10dip"
                        />

                    <!--banker-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_centerVertical="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textColor="@color/color_text"
                                android:text="@string/banker"/>
                            <TextView
                                android:id="@+id/consult_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:textColor="@color/color_link"
                                android:text="@string/loan_consult"
                                android:textSize="14dip" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/contacts_layout"
                            android:layout_width="match_parent"
                            android:layout_height="54dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip">

                            <com.softgrid.shortvideo.customView.CircleImageView
                                android:id="@+id/contacts_icon"
                                android:layout_width="44dip"
                                android:layout_height="44dip"
                                android:layout_centerVertical="true"
                                android:src="@drawable/fc_boy_headdefault"
                                android:scaleType="centerCrop"/>

                            <com.softgrid.shortvideo.customView.CImageView
                                android:id="@+id/contacts_callbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/fc_phonecall_button"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:layout_toLeftOf="@id/contacts_callbtn"
                                android:layout_toRightOf="@id/contacts_icon"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/contacts_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:singleLine="true"
                                        android:textColor="@color/color_text"
                                        android:text="田峰"/>

                                    <ImageView
                                        android:id="@+id/contacts_stars"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dip"
                                        android:layout_gravity="center"
                                        android:src="@drawable/fc_stars_04"/>

                                </LinearLayout>
                                <TextView
                                    android:id="@+id/contacts_company"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dip"
                                    android:textSize="12sp"
                                    android:singleLine="true"
                                    android:textColor="@color/color_detail"
                                    android:text="链家高新店"/>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dip"
                        android:background="@color/line_color"
                        />

                    <!--状态-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textColor="@color/color_text"
                                android:text="@string/status"/>
                            <FrameLayout
                                android:id="@+id/loan_status_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dip"
                                android:layout_gravity="center"
                                android:background="@drawable/button_yellow_stroke"
                                >
                                <TextView
                                    android:id="@+id/loan_status_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dip"
                                    android:paddingBottom="3dip"
                                    android:paddingRight="6dip"
                                    android:paddingLeft="6dip"
                                    android:layout_gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/yellow"
                                    android:text="银行审核中"/>
                            </FrameLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:textColor="@color/color_detail"
                            android:text="您的贷款正在审核，请及时联系银行经理确认审核进度，以便及时掌握贷款信息。"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            >
                            <FrameLayout
                                android:id="@+id/loan_status_update_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dip"
                                android:layout_marginBottom="10dip"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:background="@drawable/button_black"
                                >
                                <TextView
                                    android:id="@+id/loan_status_update_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="6dip"
                                    android:paddingBottom="6dip"
                                    android:paddingRight="8dip"
                                    android:paddingLeft="8dip"
                                    android:layout_gravity="center"
                                    android:textSize="14sp"
                                    android:textColor="@color/white"
                                    android:text="审核已通过"/>
                            </FrameLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dip"
                        android:background="@color/line_color"
                        />

                    <!--温馨提示-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textColor="@color/color_detail"
                        android:text="@string/tips"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginBottom="10dip"
                        android:textSize="12sp"
                        android:textColor="@color/color_detail"
                        android:text="@string/tips_bespoke"/>

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>